<div class="container mx-auto text-black">
  <form class="update-form bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-lg font-medium text-black-700 mb-4">Update post</h2>
    <div class="mb-4">
      <label class="block text-black-700 font-medium mb-2" for="title">
        Title
      </label>
      <input
        class="w-full border border-black-700 p-2 rounded-lg"
        type="text"
        id="title"
        name="title"
        value="{{title}}"
        required
        />
    </div>
    <div class="mb-4">
      <label class="block text-black-700 font-medium mb-2" for="content">
        Content
      </label>
      <textarea
        class="w-full border border-black-700 p-2 rounded-lg"
        id="content"
        name="content"
        rows="8"
        required
      >{{content}}</textarea>
      <p id="posted_by">written by: {{posted_by}}</p>
      
      <div id="post-date" class="mb-4">
        Posted on: {{post_date}}
        <p id="post-id">{{id}}</p>
      </div>

    </div>

  
    
      
      
    <div class="text-right">
      <button
      type="button"
        id="update-post"
        class="bg-indigo-500 text-white p-2 rounded-lg hover:bg-indigo-600"
      >
        Post
      </button>
    </div>
  </form>