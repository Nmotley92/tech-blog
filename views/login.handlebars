<div class="container mx-auto flex justify-center">
  <div class="w-full max-w-xs">
    <form class="login-form bg-white py-8 px-4 rounded-lg shadow-md">
      <h2 class="text-lg font-medium mb-4 text-center text-gray-700">Login</h2>
      <div class="mb-4">
        <label for="email-login" class="block text-gray-700 font-medium mb-2">Email</label>
        <input type="email" class="w-full border border-gray-400 p-2 rounded-lg" placeholder="Email" id="email-login">
      </div>
      <div class="mb-4">
        <label for="password-login" class="block text-gray-700 font-medium mb-2">Password</label>
        <input type="password" class="w-full border border-gray-400 p-2 rounded-lg" placeholder="Password" id="password-login">
      </div>
      <div class="flex items-center justify-between">
        <button type="submit" class="bg-indigo-500 text-white py-2 px-4 rounded-lg hover:bg-indigo-600">
          Login
        </button>
        <a href="#" class="text-indigo-500 hover:text-indigo-600">Forgot Password?</a>
      </div>
      <div class="text-center mt-4">
        <p class="text-gray-500">Don't have an account? <a href="/signup" class="text-indigo-500 hover:text-indigo-600">Signup</a></p>
      </div>
    </form>
  </div>
</div>