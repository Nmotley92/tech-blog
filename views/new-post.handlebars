<div class="container mx-auto text-black">
  <form class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-lg font-medium text-black-700 mb-4">Create a new post</h2>
    <div class="mb-4">
      <label class="block text-black-700 font-medium mb-2" for="title">
        Title
      </label>
      <input
        class="w-full border border-black-700 p-2 rounded-lg"
        type="text"
        id="title"
        name="title"
        required
      />
    </div>
    <div class="mb-4">
      <label class="block text-black-700 font-medium mb-2" for="content">
        Content
      </label>
      <textarea
        class="w-full border border-black-700 p-2 rounded-lg"
        id="content"
        name="content"
        rows="8"
        required
      ></textarea>
    </div>

    {{!-- create div written by that shows current users username --}}
    <div class="mb-4">
      {{> username}}
      
        
        
      
      
    <div class="text-right">
      <button
        id="create-post"
        class="bg-indigo-500 text-white p-2 rounded-lg hover:bg-indigo-600"
      >
        Create post
      </button>
    </div>
  </form>
</div>