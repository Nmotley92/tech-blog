{{!-- Blog card --}}
<div class="border rounded-lg p-4">
  <div class="text-center border-b py-2">
    <h2 class="text-lg font-medium">{{title}}</h2>
  </div>
  <div class="p-4 border-b">
    <p class="text-white-700">{{content}}</p>
  </div>
  <div class="text-sm text-white-600 p-4">
    <p>{{post_date}}</p>
    <p>By: {{posted_by}}</p>
  </div>
  <div class="text-right pr-4 pb-4">
    <button class="bg-blue-500 text-white rounded-lg px-4 py-2">Add Comment</button>
  </div>
</div>