<div class="container d-flex justify-content-center">
  <div class="row">
    <div class="col-lg-12">
      <a href="/new-post" class="btn btn-primary mb-4">+ Create New Post</a>
      <h2 class="text-center mb-4">Blog Posts</h2>
      {{#each posts as |post|}}
      <a href="/post/{{post.id}}">
        <div class="card border rounded-lg p-4 mb-4">
          {{>blog-details}}

          <div class="card-footer d-flex justify-content-end">
            <div class="d-flex justify-content-center">
              <a href="/update/{{post.id}}"><button class="btn btn-warning">Update</button></a>
              <button id="delete-post" class="delete-post btn btn-danger ml-2">Delete</button>
            </div>
          </div>


        </div>
      </a>
      {{/each}}
    </div>
  </div>
</div>