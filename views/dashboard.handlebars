{{!-- display users dashboard with a button centered at the bottom of the page --}}
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="text-center mb-4">Blog Posts</h2>
      {{#each posts}}
        <div class="card mb-4">
          <div class="card-body">
            <h3 class="card-title">{{title}}</h3>
            <p class="card-text">{{content}}</p>
            <p class="card-text">
              <small class="text-muted">Written by {{username}}</small>
            </p>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 text-center">
      <a href="/new-post" class="btn btn-primary">+ New Post</a>
    </div>
  </div>
</div>

