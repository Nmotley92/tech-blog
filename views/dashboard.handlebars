
<div class="container d-flex justify-content-center">
  <div class="row">
    <div class="col-lg-12">
      <a href="/new-post" class="btn btn-primary mb-4">+ Create New Post</a>
      <h2 class="text-center mb-4">Blog Posts</h2>
      {{#each posts as |post|}}
        <div class="card border rounded-lg p-4 mb-4">
          {{>blog-details}}
          <div class="card-footer d-flex justify-content-end ">
            <a href="/update/{{post.id}}" class="btn btn-warning">Update</a>
            <a href="/delete-post/{{post.id}}" class="btn btn-danger ml-2">Delete</a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>


